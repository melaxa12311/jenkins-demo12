pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/melaxa123111/jenkins-demo.git', credentialsId: 'github-creds'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Hello Jenkins! Code pulled successfully."'
            }
        }
    }
}
